<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Dashboard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Dashboard"
                android:fontFamily="@font/opensans"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/classwork"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/classwork"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class Work"
                        android:fontFamily="@font/opensans"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/oclass"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/onlineclass"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online Class"
                        android:fontFamily="@font/opensans"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/atttendace"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/attendance"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:fontFamily="@font/opensans"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/anydobt"
                    android:clickable="true"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    android:layout_weight="2"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/question"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any Dobut"
                        android:fontFamily="@font/opensans"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ssregi"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/student"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Register"
                        android:fontFamily="@font/opensans"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/mcomplain"
                    android:clickable="true"
                    android:layout_weight="2"
                    android:layout_width="165dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/complain"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Complain"
                        android:fontFamily="@font/opensans"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/teacherlogout"
                android:clickable="true"
                android:layout_weight="2"
                android:layout_width="165dp"
                android:layout_height="165dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"

                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shutdown"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:fontFamily="@font/opensans"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="130dp"
                    android:layout_gravity="center_horizontal" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>